<div class="container">
  <div class="text-center">
  
    <p>
      <strong>Title:</strong>
      <%= @product.title %>
    </p>

    <p>
      <strong>Short description:</strong>
      <%= @product.short_description %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <%= javascript_pack_tag 'display_product_prices' %>
    <div id="show-product-prices"></div>
    
  </div>

  <%= link_to "<i class='fas fa-angle-left'></i> Back to All Products".html_safe, products_path, class: "btn btn-light me-3" %>
  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit Product', edit_product_path(@product), class: "btn btn-primary me-3" %>
    <%= link_to 'Delete Product', @product, method: :delete, data: { confirm: 'Are you sure that you want to delete this product? You cannot undo this action.' }, class: "btn btn-danger" %>
  <% end %>
  
</div>